{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build current file",
      "type": "shell",
      "command": "g++ --std=c++20 -Wall -Werror -pedantic -g -Wno-comment -fsanitize=address -fsanitize=undefined -D_GLIBCXX_DEBUG \"${file}\" -o \"${fileDirname}/${fileBasenameNoExtension}.out\"",
      "args": [],
      "problemMatcher": ["$gcc"],
      "group": "build"
    }
  ]
}
